{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest"
  ],
  "platform": "github",
  "username": "mfin-bot[bot]",
  "repositories": ["mfin/containers"],
  "onboarding": false,
  "requireConfig": "optional",
  "gitAuthor": "mfin-bot <123061670+mfin-bot[bot]@users.noreply.github.com>",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prIgnoreNotification"],
  "commitBodyTable": true,
  "packageRules": [
    {
      "description": "Auto-merge Github Actions",
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": ["renovatebot/github-action"]
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "commitMessagePrefix": "ðŸ“£ "
    },
    {
      "description": "Use custom versioning for Minio",
      "matchDatasources": ["github-releases"],
      "versioning": "regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)T.*Z$",
      "matchPackagePatterns": ["minio/mc"]
    }
  ],
  "regexManagers": [
    {
      "description": "Process custom Dockerfile dependencies",
      "fileMatch": [
        ".+Dockerfile$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\nARG .*?_VERSION=(\\\\?)(\"?)(?<currentValue>.+?)(\\\\?)(\"?)\\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
